<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Details text label -->
    <style name="textLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Details text label -->
    <style name="buttonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- LinearLayout Book Details Line -->
    <style name="LinearLayoutDetailsLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_4</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayoutDetailsLineVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_4</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
